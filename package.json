{
  "name": "cms-customer-api",
  "version": "1.0.0",
  "description": "Clean Architecture CMS with Customer CRUD",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate:up": "tsx src/infrastructure/database/migrations/runMigrations.ts up",
    "migrate:down": "tsx src/infrastructure/database/migrations/runMigrations.ts down",
    "seed": "tsx src/infrastructure/database/seed.ts seed",
    "seed:clear": "tsx src/infrastructure/database/seed.ts clear",
    "db:setup": "npm run migrate:up && npm run seed",
    "db:reset": "npm run migrate:down && npm run migrate:up && npm run seed",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "cms",
    "clean-architecture",
    "typescript",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "morgan": "^1.10.1",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/rate-limit-redis": "^1.7.4",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
